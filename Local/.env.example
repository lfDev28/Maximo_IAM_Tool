# =========================
# Database (Postgres)
# =========================
PG_DB=keycloak
PG_USER=keycloak
PG_PASSWORD=changeme_pg_password

# =========================
# Keycloak
# =========================
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=changeme_admin_password
KEYCLOAK_HOSTNAME_URL=https://localhost:8443
KEYCLOAK_HOSTNAME=localhost

# Truststore password (used by Keycloak SPI)
KEYCLOAK_TRUSTSTORE_PASSWORD=changeme_truststore

# =========================
# LDAP (OpenLDAP)
# =========================
LDAP_DOMAIN=example.org
LDAP_ORGANISATION="Example Inc"
LDAP_ADMIN_PASSWORD=changeme_ldap_admin
LDAP_CONFIG_PASSWORD=changeme_ldap_config

# =========================
# TLS Certificates
# =========================
TLS_CERT_PATH=./certs/keycloak/keycloak.pem
TLS_KEY_PATH=./certs/keycloak/keycloak-key.pem
TLS_TRUSTSTORE_PATH=./certs/keycloak/truststore.jks